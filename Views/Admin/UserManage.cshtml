@{
    ViewData["Title"] = "UserManage";

    var userRoles = ViewBag.UserRoles as List<UserRoleViewModel>;



}

@if (TempData["Success"] != null)
{
    <br>


    <div id="alert" class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success" role="alert">
                    <strong>@TempData["Success"]</strong>
                </div>
            </div>
        </div>
    </div> 
      
}
             <div class="container-fluid">
            <div class="row">
              <!-- Zero Configuration  Starts-->
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header pb-0 card-no-border ">
                    <div class="row">
                  <div class="col-md-6">
                    <h4>Zero Configuration</h4>
                      </div>
                    <div class="col-md-6 text-end">
                       <a asp-action="UserAdd" class="  btn btn-outline-success"> Kullanıcı Ekle</a>
                    </div>
                    </div>

     
               
               
                 
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="display" id="basic-1">
                        <thead>
                          <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Email</th>
                            <th>Id</th>
                            <th></th>
                            <th></th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                    @foreach (var userRole in userRoles)
                    {
                      
                          <tr>
                         <td>@userRole.User.UserName</td>
                          <td>
                            @if (userRole.Roles.Any())
                            {
                                @string.Join(", ", userRole.Roles)
                            }
                            else
                            {
                                <em>Rol Eklenmemiş</em>
                            }
                        </td>
                             <td>@userRole.User.Email</td>
                            <td>@userRole.User.Id</td>
                            <td></td>
                            <td></td>
                            <td> 
                              <ul class="action"> 
                                <li class="edit"> <a asp-action="UserEdit" asp-route-id="@userRole.User.Id"><i class="icon-pencil-alt"></i></a></li>
                                <li class="delete"><a href="#"><i class="icon-trash"></i></a></li>
                              </ul>
                            </td>
                          </tr>

                    }


                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
          


    <!-- Plugins JS start-->


    <!-- Plugins JS Ends-->
    <!-- Theme js-->

<script>
        setTimeout(function() {
            document.getElementById('alert').style.display = "none";
        }, 3000); // 5000 milisaniye = 5 saniye
    
</script>
